<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.proyectobibliotecauq.viewController.LoginViewController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30"
          AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30">
        <Label text="Iniciar Sesión" style="-fx-font-size: 20px; -fx-font-weight: bold"/>

        <TextField fx:id="txtUsuario" promptText="Usuario"/>
        <PasswordField fx:id="txtContrasena" promptText="Contraseña"/>

        <Button text="Ingresar" onAction="#onLogin"/>
        <Label fx:id="lblMensaje" textFill="red"/>
    </VBox>
</AnchorPane>
